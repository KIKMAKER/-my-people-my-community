<div>
  <h1>Projects index page</h1>
</div>

<div>
  <h5>amount of projects: <%= @projects.count %></h5>
</div>

<div>
  <% @projects.each do |project| %>
    <h3><%= project.title %></h3>
    <h5><%= project.location %></h5>
    <p><%= project.description %></p>
    <p>Start date: <strong><%= project.start_date.strftime("%e %B %Y") %></strong> - End date: <strong><%= project.end_date.strftime("%e %B %Y") %></strong> </p>
  <% end %>
</div>
