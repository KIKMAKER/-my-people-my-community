<div class="project-index">
  <div class="container text-center">
    <h3>FIND A PROJECT</h3>
    <h5>Grow your skills, your portfolio, and your community with one of these projects.</h5>
    <div class = "search-area mt-5">
      <%= form_with url: projects_path, method: :get, class: "d-flex justify-content-center" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "button-input",
              placeholder: "Find a project by it's name, location or social category"
            %>
        <%= submit_tag "Search", class: "search-button" %>
      <% end %>
    </div>
    <%# cards section %>
    <div class="project-index-cards mt-4">
      <% @projects.each do |project| %>
        <%= link_to project_path(project) do %>
          <div class="card-trip">
            <%= cl_image_tag project.photos[0].key%>
            <div class="card-trip-infos">
              <div>
                <h2><%= project.title %></h2>
                <div>
                  <p><%= project.description.truncate(130) %></p>
                  <% project.skills.each do |skill| %>
                  <div class="skill-pill">
                    <p><%= skill.name %></p>
                  </div>

                  <% end %>
                </div>
              </div>
              <%= cl_image_tag project.user.photo.key, class: "card-trip-user avatar-bordered"%>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
